 		ifndef FileDialog_INC
		define FileDialog_INC

; Window properties
FONT_COLOR_BACK_GND	EQU	0x3c3c
FONT_COLOR		EQU	0x3e3e
HIGHLIGHT_COLOR		EQU	0x0b0b

WINDOW_COLOR		EQU	0x0909

COLUMNS			EQU	3
ROWS			EQU	14
COLUMN_SIZE		EQU	15*8
ROW_SIZE		EQU	14
	 
FILE_VIEW_LEFT		EQU	32
FILE_VIEW_TOP		EQU	30
FILE_VIEW_WIDTH		EQU	COLUMN_SIZE*COLUMNS+20
FILE_VIEW_HEIGHT	EQU	300	

FV_CLOSE_LEFT		EQU	FILE_VIEW_LEFT+366
FV_CLOSE_TOP		EQU	FILE_VIEW_TOP+4
FV_CLOSE_WIDTH		EQU	12
FV_CLOSE_HEIGHT		EQU	12	
	
FV_SELECT_LEFT		EQU	FILE_VIEW_LEFT+10
FV_SELECT_TOP		EQU	FILE_VIEW_TOP+54
FV_SELECT_WIDTH		EQU	359
FV_SELECT_HEIGHT	EQU	195	

FV_PREV_COL_LEFT	EQU	FV_SELECT_LEFT-1
FV_PREV_COL_TOP		EQU	FILE_VIEW_TOP+252
FV_PREV_COL_WIDTH	EQU	14
FV_PREV_COL_HEIGHT	EQU	14	

FV_NEXT_COL_LEFT	EQU	FV_SELECT_LEFT+FV_SELECT_WIDTH-10
FV_NEXT_COL_TOP		EQU	FILE_VIEW_TOP+252
FV_NEXT_COL_WIDTH	EQU	14
FV_NEXT_COL_HEIGHT	EQU	14

FV_DRIVE_LEFT		EQU	FV_SELECT_LEFT+6
FV_DRIVE_TOP		EQU	FILE_VIEW_TOP+25
FV_DRIVE_WIDTH		EQU	32
FV_DRIVE_HEIGHT		EQU	32
FV_DRIVE_NEXT		EQU	45	
	
FV_LS_BUTTON_LEFT	EQU	FILE_VIEW_LEFT+309	
FV_LS_BUTTON_TOP	EQU	FILE_VIEW_TOP+252+24	
FV_LS_BUTTON_WIDTH      EQU     64
FV_LS_BUTTON_HEIGHT     EQU     64

FV_FILE_EDIT_LEFT	EQU	FILE_VIEW_LEFT+200
FV_FILE_EDIT_TOP	EQU	FILE_VIEW_TOP+252+24
FV_FILE_EDIT_WIDTH      EQU     8*13
FV_FILE_EDIT_HEIGHT     EQU     14

FV_SCROLL_BAR_LEFT      EQU     FV_PREV_COL_LEFT+FV_PREV_COL_WIDTH+1
FV_SCROLL_BAR_TOP       EQU     FV_PREV_COL_TOP
FV_SCROLL_BAR_WIDTH     EQU     FV_NEXT_COL_LEFT-(FV_PREV_COL_LEFT-FV_PREV_COL_WIDTH)-2
FV_SCROLL_BAR_HEIGHT	EQU     FV_PREV_COL_HEIGHT	


		 
; Entry types		 
ENTRY_FILE	EQU	0
ENTRY_DIR	EQU	1


DIALOG_LOAD	EQU	0
DIALOG_SAVE	EQU	1
	 
		STRUCT FILE_ENTRY
type		BYTE	
name		BLOCK	13,0
time		WORD	
date		WORD	
size		BLOCK   4,0 
		ENDS 
		
		STRUCT FILE_INFO
totalEntries	WORD
nrDrives	BYTE
nrDirs		WORD
nrFiles		WORD
entryOffset	WORD
entryTable	WORD
mode		BYTE  
pSelectedFile   WORD
selectedFileX	WORD
selectedFileY	WORD
pixelsPerColumn WORD
fileName	BLOCK	13,0	; // Work file name
		ENDS 


		STRUCT FILE_VIEW
left		WORD
top		WORD
width		WORD
height		WORD
columns		BYTE
rows		BYTE
backColor	WORD
fontColor	WORD
		ENDS


	
		
		endif
		 
